<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_bottom_sheet_dialog"
    android:paddingTop="26dp"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:id="@+id/divider"
        android:background="@drawable/divider_dialog"
        android:layout_width="43dp"
        android:layout_height="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"
        android:id="@+id/tv_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="@string/volume"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"/>
    <SeekBar
        android:id="@+id/seekBar_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:progressDrawable="@drawable/seekbar_style_2"
        android:thumb="@drawable/thumb"
        android:thumbTint="@color/main_orange"
        app:layout_constraintStart_toStartOf="@+id/tv_volume"
        app:layout_constraintTop_toBottomOf="@+id/tv_volume"/>
</androidx.constraintlayout.widget.ConstraintLayout>
