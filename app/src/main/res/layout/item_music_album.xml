<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_thumbnail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_8sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="2dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center"
            android:id="@+id/iv_album_art"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_music_thumbnail_default"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:textSize="@dimen/_14sdp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/tv_album_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:lines="2"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="@+id/cv_thumbnail"
        app:layout_constraintStart_toStartOf="@+id/cv_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/cv_thumbnail"/>
    <TextView
        android:textSize="@dimen/_9sdp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:id="@+id/tv_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:lines="1"
        android:layout_below="@+id/tv_album_name"
        android:layout_marginHorizontal="@dimen/_10sdp"
        app:layout_constraintEnd_toStartOf="@+id/cv_thumbnail"
        app:layout_constraintStart_toStartOf="@+id/cv_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/tv_album_name"/>
</androidx.constraintlayout.widget.ConstraintLayout>
