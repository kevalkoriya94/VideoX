<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_bottom_sheet_dialog"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/divider1"
        android:background="@drawable/divider_dialog"
        android:layout_width="43dp"
        android:layout_height="4dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <RadioGroup
        android:orientation="vertical"
        android:id="@+id/rg_video_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/divider1">
        <RadioButton
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:id="@+id/rb_sensor"
            android:background="@drawable/bg_ripple_click"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:checked="true"
            android:button="@null"
            android:text="@string/sensor"
            android:drawableEnd="@drawable/custom_check_box"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"/>
        <RadioButton
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:id="@+id/rb_portrait"
            android:background="@drawable/bg_ripple_click"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:button="@null"
            android:text="@string/portrait"
            android:drawableEnd="@drawable/custom_check_box"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"/>
        <RadioButton
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:id="@+id/rb_landscape"
            android:background="@drawable/bg_ripple_click"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:button="@null"
            android:text="@string/landscape"
            android:drawableEnd="@drawable/custom_check_box"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"/>
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>
