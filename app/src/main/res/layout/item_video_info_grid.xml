<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_ripple_click"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_thumbnail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_5sdp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_gravity="center"
            android:id="@+id/iv_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>
        <TextView
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_gravity="end|bottom"
            android:id="@+id/tv_total_time"
            android:background="@drawable/bg_time_video"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="00:00"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:gravity="start"
        android:id="@+id/tv_video_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:lines="1"
        app:layout_constraintEnd_toEndOf="@+id/cv_thumbnail"
        app:layout_constraintStart_toStartOf="@+id/cv_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/cv_thumbnail"/>
    <TextView
        android:textSize="@dimen/_9sdp"
        android:textColor="@color/black"
        android:gravity="start"
        android:id="@+id/tv_created_day"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:lines="1"
        app:layout_constraintEnd_toEndOf="@+id/cv_thumbnail"
        app:layout_constraintStart_toStartOf="@+id/cv_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/tv_video_name"/>
    <TextView
        android:textSize="@dimen/_9sdp"
        android:textColor="@color/black"
        android:gravity="center"
        android:id="@+id/tv_resolution_size"
        android:background="@drawable/bg_resolution_video"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:text="720P"
        android:layout_marginEnd="@dimen/_30sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/cv_thumbnail"
        app:layout_constraintTop_toBottomOf="@+id/tv_created_day"/>
    <TextView
        android:textSize="@dimen/_9sdp"
        android:textColor="@color/black"
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/tv_folder_name"
        android:background="@drawable/bg_resolution_video"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:maxWidth="100dp"
        android:text="ssss"
        android:maxLines="1"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/baseline_folder_24"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginStart="5dp"
        android:drawableTint="@color/main_orange"
        app:layout_constraintBottom_toBottomOf="@+id/tv_resolution_size"
        app:layout_constraintStart_toEndOf="@+id/tv_resolution_size"
        app:layout_constraintTop_toTopOf="@+id/tv_resolution_size"
        app:layout_constraintVertical_chainStyle="packed"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_more"
        android:paddingTop="@dimen/_2sdp"
        android:paddingBottom="@dimen/_2sdp"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_18sdp"
        android:src="@drawable/baseline_more_vert_24"
        app:layout_constraintBottom_toBottomOf="@+id/tv_resolution_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_resolution_size"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_checked"
        android:visibility="gone"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_18sdp"
        android:src="@drawable/custom_check_button_setting"
        android:layout_marginEnd="@dimen/_7sdp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_resolution_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_resolution_size"/>
</androidx.constraintlayout.widget.ConstraintLayout>
