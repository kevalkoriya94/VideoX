<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AdsAppTheme" parent="@style/Theme.AppCompat.Light"></style>

    <style name="AppTheme.Ads" parent="@style/AdsAppTheme">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/ads_icon</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">15dp</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:text">Ad</item>
    </style>

    <style name="Theme_MediaPlayer" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="fontFamily">@font/helvetica</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme_MediaPlayer_LightMode" parent="@style/Theme_MediaPlayer">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/white_gray</item>
        <item name="android:navigationBarColor">@color/white_gray</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="SplashTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg_main</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="TabHome" parent="">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextViewSetting" parent="">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="RelativeSetting" parent="">
        <item name="android:background">@drawable/bg_ripple_click</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
    </style>

    <style name="SwitchSetting" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:thumb">@drawable/custom_switch_thump</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="track">@drawable/custom_switch_track</item>
    </style>

    <style name="TabMenu" parent="">
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/color_icon_tab_unselect</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="SearchViewStyle" parent="@style/Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
    </style>

    <style name="SearchWebViewStyle" parent="@style/Widget.AppCompat.Light.SearchView">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="closeIcon">@null</item>
        <item name="defaultQueryHint">@string/type_in_your_search</item>
        <item name="fontFamily">sans-serif</item>
        <item name="queryHint">@string/type_in_your_search</item>
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="NumberPickerStyle" parent="">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:colorControlNormal">@color/white</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

    <style name="YTOSecondsTextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppModalStyle" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/layout_bg</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
</resources>
